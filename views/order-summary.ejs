<%- include ('partials/head') %>
<%- include ('partials/nav') %>
  <!-- Banner section starts -->
    <!-- Video play -->
    <div class="banner">
      <video autoplay loop playsinline>
          <source src="/video/category-sale.mp4" type="video/mp4">
      </video>
  </div>
  <!-- Banner section ends -->
  <!--==========Order Summary Section==========-->
  <div class="container">
    <main>
      <div class="py-1 text-center">
        <h2>Order Summary</h2>
        <p class="lead">Thank you for your order, <%= customerName %>!</p>
      </div>

      <div class="row g-5">
        <div class="col-md-4 mx-auto">
          <h3 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-primary">Your cart</span>
            <span class="badge bg-primary rounded-pill"> <%= products.length %></span>
          </h3>
          <ul class="list-group mb-3">

            <% products.forEach(function(product,i){ %>
              <li class="list-group-item d-flex justify-content-between">
                <div>
                  <h4 class="unbold"><%= product %></h4>
                </div>
                <p>$<%= prices[i] %></span>
              </li>

            <% }); %>

            <li class="list-group-item d-flex justify-content-between">
                <strong><span>Total: </span></strong>
                <strong><span>$<%= totalAmount %></span></strong>
            </li>
          </ul>
        </div>
      </div>
    </main>
  </div>
  <!--==========Order Summary Section==========-->


<%- include ('partials/footer') %>